  <%= form_for @ungrouped_medicine do |f| %>
    <% @ungrouped_medicine.errors.full_messages.each do |error| %>
    <p class="errors">* <%= error %></p>
    <% end %>    
    <%= f.label 'Name' %>
    <%= f.text_field :name %>
    <br/> <br/>
    <%= f.label 'Amount' %>
    <%= f.text_field :amount %>
    <br/> <br/>
    <%= f.submit "Create" %>
  <% end %>